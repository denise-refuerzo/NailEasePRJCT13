rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users (authenticated or unauthenticated) to upload receipts
    match /receipts/{receiptId} {
      // Allow write (upload) with security restrictions
      allow write: if request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');  // Only images
      
      // Allow read access (authenticated users can read, or make it public if needed)
      allow read: if true;  // Allow anyone to read receipts (or change to request.auth != null for authenticated only)
    }
    
    // Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
